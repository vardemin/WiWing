<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.vardemin.wiwing.WiDialogFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/dialog_bottom">
        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/dialog_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteTransparent"
            android:layout_alignParentBottom="true"
            android:padding="16dp">
            <ImageView
                android:id="@+id/dialog_add_user"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/dialog_add_user_icon"/>
            <EditText
                android:id="@+id/dialog_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dialog name"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/dialog_add_user"
                android:layout_toLeftOf="@+id/dialog_add"/>
            <ImageView
                android:id="@+id/dialog_add"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/post_btn"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/dialog_added_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_add"/>
        </RelativeLayout>
    </RelativeLayout>


</FrameLayout>
