<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/news_cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/news_item_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:minHeight="100dp"
            android:layout_marginBottom="-60dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/news_item_header"
            android:textSize="30sp"
            android:text="BLABLA"
            android:textAlignment="center"
            android:layout_below="@+id/news_item_photo"
            android:background="@color/blackTransparent"
            android:textColor="@color/cardview_light_background"
            android:padding="25dp"
            />
        <LinearLayout
            android:id="@+id/news_user_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/news_item_photo"
            android:padding="3dp">
            <TextView
                android:id="@+id/news_user_name"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="3dp"
                android:textStyle="italic"
                android:textColor="@color/cardview_light_background"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/news_user_photo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                app:civ_border_width="2dp"
                app:civ_border_color="#17A3FA"/>
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/news_item_content"
            android:text="blablabla"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:layout_below="@+id/news_item_header"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>